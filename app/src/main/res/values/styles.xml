<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="colorPrimaryDark">@color/twitter_blue_fill_pressed</item>
        <item name="colorAccent">@color/medium_gray</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="colorPrimaryDark">@color/twitter_blue_fill_pressed</item>
        <item name="colorAccent">@color/twitter_blue_50</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/twitter_blue</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/twitter_blue</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/twitter_blue</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="colorAccent">@color/twitter_blue_50</item>
    </style>

</resources>
